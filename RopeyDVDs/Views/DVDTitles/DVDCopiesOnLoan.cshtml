@{
}
@model System.Collections.Generic.List<RopeyDVDs.Models.DTO.DVDCopiesOnLoanDTO>

@{
    ViewBag.Title = "DVD Copies on Loan";
    Layout = "_Layout";
}

<h2>Total Number of DVDs Copies on Loan</h2>
<table>
    <thead>
    <tr>
        <th>Member Name</th>
        <th>DVD Title</th>
        <th>Copy Number</th>
        <th>Date Out</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.CopyNumber</td>
            <td>@item.DateOut</td>
        </tr>
    }
    </tbody>
</table>
